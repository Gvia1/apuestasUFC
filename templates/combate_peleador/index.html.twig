        <h3 class="text-light">{{peleador.peleador.nombre}} <a href="{{path('app_apuesta_new')}}" class="btn btn-danger btn-lg active" role="button" aria-pressed="true">Apostar</a></h3> 
    </div>
    {% endfor %}
    <a href="{{ path('app_combate_peleador_new') }}">Create new</a>
</div>
    
{% endblock %}
