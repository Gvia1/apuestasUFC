{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    <section class="normal-breadcrumb set-bg" data-setbg="{{ asset('img/registro.jpg' )}}">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="normal__breadcrumb__text">
                        <h2>Registro</h2>
                        <p>Bienvenido a apuestas UFC</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="login spad">
        <div class="container">
            {{ form_start(registrationForm) }}
                <div class="form-row">
                    <div class ="col">
                    <label class="text-white">Username</label>
                        {{ form_widget(registrationForm.username, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class ="col">
                    <label class="text-white">Contrase√±a</label>
                        {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                </div>
                <br>
                <div class="form-row">
                    <div class ="col">
                    <label class="text-white">Nombre</label>
                        {{ form_widget(registrationForm.Nombre, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class ="col">
                    <label class="text-white">Apellidos</label>
                        {{ form_widget(registrationForm.Apellidos, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class ="col">
                    <label class="text-white">Direccion</label>
                        {{ form_widget(registrationForm.Direccion, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                </div>
                <br>
                <div class="form-row">
                    <div class ="col">
                    <label class="text-white">Localidad</label>
                        {{ form_widget(registrationForm.Localidad, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class ="col">
                    <label class="text-white">Email</label>
                        {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class ="col">
                    <label class="text-white">Telefono</label>
                        {{ form_widget(registrationForm.telefono, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                </div>
                <br>
                <div class="form-row">
                    <div class ="col">
                    <label class="text-white">Entidad</label>
                        {{ form_widget(registrationForm.entidad, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class ="col">
                    <label class="text-white">Oficina</label>
                        {{ form_widget(registrationForm.oficina, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class ="col">
                    <label class="text-white">DC</label>
                        {{ form_widget(registrationForm.dc, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                    <div class ="col">
                    <label class="text-white">Numero de cuenta</label>
                        {{ form_widget(registrationForm.numero_cuenta, { 'attr': {'class': 'form-control'} } )}}
                    </div>
                </div>
                <div class="form-check">
                    <label class="text-white">Aceptar terminos
                    {{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'form-check'} } )}}
                    </label>
                </div>
                <br>
                <button type="submit" class="site-btn">Registrarse</button>
                <a href="{{ path('app_login') }}">Volver al login</a>
        {{ form_end(registrationForm) }}
        </div>
    </section>
</div>
{% endblock %}
