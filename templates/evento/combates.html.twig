{% extends 'base.html.twig' %}

{% block title %}Combates {{evento.nombre}}{% endblock %}
{% block body %}
<div class="container">
<!-- Normal Breadcrumb Begin -->
    <section class="normal-breadcrumb set-bg" data-setbg="">
        <div class="col-lg-12 text-center">
            <div class="normal__breadcrumb__text">
                <h2>{{evento.nombre}}</h2>
            </div>
        </div>
    </section>
<!-- Normal Breadcrumb End -->
    {% for combate in combates %}
     <div class="row">
        <h3 class="text-light">{{combate.peleador1.alias}} VS {{combate.peleador2.alias}} <a href="{{path('app_apuesta_new',{'id':combate.id})}}" class="btn btn-danger btn-lg active" role="button" aria-pressed="true">Apostar</a></h3> 
    </div>
    {% endfor %}
</div>
{% endblock %}
