                                <div class="ep">
                                    {{evento.fecha|date("d/m/Y")}}
                                </div>
                                <div class="view">
                                NÂº Combates
                                    <i class="fa fa-profile"></i>{{evento.combates|length}}
                                </div>
                            </div>
                                <h5 class ="text-white">{{evento.nombre}}</h5>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
